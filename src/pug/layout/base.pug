doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        block variables
        - var pageTitle
        - var activePage
        title= pageTitle
        link(href="static/css/main.css", rel="stylesheet") 
        link(rel="shortcut icon" href="static/img/abz-a-favicon.png")
        link(href="https://fonts.googleapis.com/css?family=Overpass:600|Source+Sans+Pro:400,700&display=swap" rel="stylesheet")
    body
        include ../modules/header/module
        block content
        include ../modules/footer/module
        block scripts
        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
        script(src="static/js/main.js")